def checkPassword(password):
    upperCases, lowerCases, numbers, specialCases = 0, 0, 0, 0, 0
    length = len(password)

    if(length < 10):
        print("The password must be at least 10 characters long.")
    else:
        for i in range(0, length):
            if(password[i].isupper()):
                upperCases += 1
            elif(password[i].islower()):
                lowerCases += 1
            elif(password[i].isdigit()):
                numbers += 1
            else:
                specialCases += 1
        if (upperCases != 0 and lowerCases != 0 and numbers != 0 and specialCases != 0):
            if (length >= 10):
                print("Your password looks strong! let me fight it...\n")
            else:
                print("Your password looks alright, but can it beat the others?\n")

        else:
            if(upperCases == 0):
                print("Seems like your password needs at least one uppercase letter.")
            if(lowerCases == 0):
                print("Seems like your password needs at least one lowercase letter.")
            if(specialCases == 0):
                print("Seems like your password needs at least one special character.")
            if(numbers == 0):
                print("Seems like your password needs at least one number.")

            password = input("Please enter your password: ")
            checkPassword(password)